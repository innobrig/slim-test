{% extends 'layout.twig' %}
{% set title = 'Page Editor'  %}
{% block title %}{{ title }}{% endblock %}

{% block content %}

    {% include 'include/tinymce.twig' %}

    <div class="panel panel-info">
        <div class="panel-heading">
            {{ title }}
        </div>
        <div class="panel-body">

            <form class="form form-horizontal" name="page_editor_form" id="page_editor_form" action="{{ path_for('pageEdit.post') }}" role="form" method="POST" enctype="application/x-www-form-urlencoded">
                <input name="page[id]" type="hidden" value="{{ page.id|default('0') }}" />
                <input name="page[lang]" type="hidden" value="{{ page.lang|default('en') }}" />
                <div class="form-group">
                    <label for="page_title" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="page_title" name="page[title]" type="text" placeholder="Title" value="{{ page.title|default('') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="page_slug" class="col-sm-2 control-label">Slug</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="page_slug" name="page[slug]" type="text" placeholder="Slug (optional)" value="{{ page.title|default('') }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="page_body" class="col-sm-2 control-label">Text</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="page_body" name="page[body]" rows="20">{{ page.body|default('') }}</textarea>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-success">Submit</button>
                    <a class="btn btn-warning" href="{{ path_for('home') }}">Cancel</a>
                </div>
            </form>

        </div>
    </div>

{% endblock %}
